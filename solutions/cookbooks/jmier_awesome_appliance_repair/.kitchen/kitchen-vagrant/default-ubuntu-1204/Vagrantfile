Vagrant.configure("2") do |c|
  c.berkshelf.enabled = false if Vagrant.has_plugin?("vagrant-berkshelf")
  c.vm.box = "bento/ubuntu-12.04"
  c.vm.hostname = "default-ubuntu-1204.vagrantup.com"
  c.vm.synced_folder ".", "/vagrant", disabled: true
  c.vm.synced_folder "/Users/jonny/.kitchen/cache", "/tmp/omnibus/cache", create: true
  c.vm.provider :virtualbox do |p|
    p.name = "kitchen-jmier_awesome_appliance_repair-default-ubuntu-1204-01883d27-adcc-4a1d-b08c-08bdc660977f"
    p.customize ["modifyvm", :id, "--audio", "none"]
  end
end
